{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile file",
            "type": "shell",
            "command": "${workspaceFolder}/pages/makebooks.sh"
        }
    ],
    "args": [
            "${workspaceFolder}",
            "${input:bookName}"
    ],
    "inputs": [{
        "id": "bookName",
        "type": "promptString",
        "description": "Name of the book, please:",
        "default": "A book"
    }]
}